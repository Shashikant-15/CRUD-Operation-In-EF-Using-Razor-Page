@page
@model TestRazorWeb.Pages.Categories.createModel
<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h3 class="text-primary pl-3">Create Category</h3>
        </div>
        <div class="mb-2">
            <label asp-for="Category.Name"></label>
            <input asp-for="Category.Name" class="form-control"/>
            <span asp-validation-for="Category.Name" class="text-danger"></span>
        </div>
        <button type="submit" class="btn-primary btn">Create</button>
    </div>
</form>
@section scripts      // client side validation
{
    @{
        <partial name="_ValidationScriptPartial"/>
    }
}
