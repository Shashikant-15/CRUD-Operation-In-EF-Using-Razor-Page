@page
@model TestRazorWeb.Pages.Categories.DeleteModel
<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h3 class="text-primary pl-3">Delete Category</h3>
        </div>
        
        <div class="mb-2">
            <input type="hidden" asp-for="Category.Id"/>
            <label asp-for="Category.Name"></label>
            <input disabled asp-for="Category.Name" class="form-control"/>
        </div>
        <button type="submit" class="btn-danger btn">Delete</button>
    </div>
</form>
@section scripts      // client side validation
{
    @{
        <partial name="_ValidationScriptPartial"/>
    }
}
